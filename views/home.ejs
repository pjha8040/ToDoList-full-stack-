<%- include("header") -%>
<div class="container">
  <h1 class="mb-5 mt-0">To Do List</h1>
  <form action="/" method="post">
    <div class="bt">
      <% for (let i = 0; i < listTitles.length; i++) { %>
      <button
        type="submit"
        name="btnList"
        class="mx-3"
        value="<%= listTitles[i].name %>"
      >
        <%= listTitles[i].name %>
      </button>
      <% } %>
    </div>
  </form>
  <form action="/add" method="post">
    <div class="input-group">
      <input
        type="text"
        name="newBtn"
        placeholder="Add New List"
        class="form-control mt-5 haha"
        autocomplete="off"
      />
      <button type="submit" class="btn btn-primary butnn">Create</button>
    </div>
  </form>
</div>
<%- include("footer") -%>
